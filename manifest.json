{
  "manifest_version": 3,
  "name": "Grammarly Unblurred",
  "version": "1.0",
  "description": "Remove blur effect from Grammarly elements",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
